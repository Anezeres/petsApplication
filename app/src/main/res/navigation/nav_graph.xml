<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.petsapplication.view.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.petsapplication.view.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detalleCitaFragment"
            app:destination="@id/detalleCitaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_editarCitaFragment"
            app:destination="@id/editarCitaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_nuevaCitaFragment"
            app:destination="@id/nuevaCitaFragment" />
    </fragment>
    <fragment
        android:id="@+id/detalleCitaFragment"
        android:name="com.example.petsapplication.view.fragment.DetalleCitaFragment"
        android:label="fragment_detalle_cita"
        tools:layout="@layout/fragment_detalle_cita" />
    <fragment
        android:id="@+id/editarCitaFragment"
        android:name="com.example.petsapplication.view.fragment.EditarCitaFragment"
        android:label="fragment_editar_cita"
        tools:layout="@layout/fragment_editar_cita" />
    <fragment
        android:id="@+id/nuevaCitaFragment"
        android:name="com.example.petsapplication.view.fragment.NuevaCitaFragment"
        android:label="fragment_nueva_cita"
        tools:layout="@layout/fragment_nueva_cita" />
</navigation>